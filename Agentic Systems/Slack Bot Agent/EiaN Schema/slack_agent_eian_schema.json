{
  "architecture": "EiaN - Entity in a Network",
  "version": "1.0.0",
  "created_at": "2026-01-26",
  "description": "Abstract Space-Nodes-Context architecture for Slack Agent",
  "core_concepts": {
    "Space": "Container/environment where entities exist (workspaces, channels, threads)",
    "Node": "Discrete entities with properties (users, messages, tasks, decisions)",
    "Context": "Relationships, metadata, and temporal connections between nodes"
  },
  "layers": [
    {
      "name": "Space Layer",
      "purpose": "Define boundaries and environments",
      "entities": [
        "Workspace",
        "Channel",
        "Thread",
        "TimeWindow"
      ]
    },
    {
      "name": "Node Layer",
      "purpose": "Core entities and their properties",
      "entities": [
        "Agent",
        "Message",
        "Task",
        "Decision",
        "Summary",
        "Event"
      ]
    },
    {
      "name": "Context Layer",
      "purpose": "Relationships and metadata",
      "entities": [
        "Connection",
        "Annotation",
        "State",
        "History"
      ]
    }
  ],
  "schema": {
    "spaces": {
      "description": "Containers that define boundaries for nodes",
      "types": [
        {
          "type": "Workspace",
          "properties": {
            "space_id": "UUID",
            "space_type": "workspace",
            "name": "string",
            "domain": "string",
            "metadata": {
              "plan": "enum[free,pro,enterprise]",
              "installed_at": "timestamp",
              "settings": "json"
            },
            "status": "enum[active,inactive,suspended]"
          }
        },
        {
          "type": "Channel",
          "properties": {
            "space_id": "UUID",
            "space_type": "channel",
            "parent_space_id": "UUID (workspace)",
            "name": "string",
            "slack_id": "string",
            "metadata": {
              "channel_type": "enum[public,private,dm]",
              "monitoring_enabled": "boolean",
              "standup_config": "json",
              "summary_config": "json"
            }
          }
        },
        {
          "type": "Thread",
          "properties": {
            "space_id": "UUID",
            "space_type": "thread",
            "parent_space_id": "UUID (channel)",
            "slack_thread_ts": "string",
            "metadata": {
              "started_at": "timestamp",
              "last_activity": "timestamp",
              "status": "enum[active,idle,resolved,archived]"
            }
          }
        },
        {
          "type": "TimeWindow",
          "properties": {
            "space_id": "UUID",
            "space_type": "time_window",
            "start_time": "timestamp",
            "end_time": "timestamp",
            "window_type": "enum[standup,sprint,week,month]",
            "metadata": "json"
          }
        }
      ]
    },
    "nodes": {
      "description": "Core entities that exist within spaces",
      "types": [
        {
          "type": "Agent",
          "properties": {
            "node_id": "UUID",
            "node_type": "agent",
            "space_id": "UUID (workspace)",
            "agent_subtype": "enum[human,bot,system]",
            "identity": {
              "slack_user_id": "string",
              "display_name": "string",
              "email": "string",
              "avatar_url": "string"
            },
            "attributes": {
              "role": "enum[member,manager,admin,bot]",
              "timezone": "string",
              "preferences": "json",
              "is_active": "boolean"
            },
            "state": {
              "last_active": "timestamp",
              "status": "enum[online,away,offline]"
            }
          }
        },
        {
          "type": "Message",
          "properties": {
            "node_id": "UUID",
            "node_type": "message",
            "space_id": "UUID (thread or channel)",
            "author_node_id": "UUID (agent)",
            "content": {
              "text": "string",
              "slack_ts": "string",
              "message_type": "enum[user,bot,system,agent_response]"
            },
            "semantics": {
              "embedding_vector": "float[]",
              "intent": "string",
              "sentiment": "float",
              "entities": "json[]"
            },
            "metadata": {
              "sent_at": "timestamp",
              "has_mentions": "boolean",
              "has_attachments": "boolean",
              "attachments": "json[]"
            }
          }
        },
        {
          "type": "Task",
          "properties": {
            "node_id": "UUID",
            "node_type": "task",
            "space_id": "UUID (workspace or thread)",
            "description": "string",
            "state": {
              "status": "enum[open,in_progress,blocked,completed,cancelled]",
              "priority": "enum[low,medium,high,urgent]",
              "is_blocked": "boolean"
            },
            "temporal": {
              "created_at": "timestamp",
              "due_date": "timestamp",
              "completed_at": "timestamp"
            },
            "tracking": {
              "reminder_count": "integer",
              "last_reminder": "timestamp"
            }
          }
        },
        {
          "type": "Decision",
          "properties": {
            "node_id": "UUID",
            "node_type": "decision",
            "space_id": "UUID (thread or workspace)",
            "content": {
              "decision_text": "string",
              "context": "string",
              "rationale": "string"
            },
            "classification": {
              "decision_type": "enum[technical,product,process,resource,strategic]",
              "impact": "enum[low,medium,high,critical]"
            },
            "state": {
              "is_implemented": "boolean",
              "made_at": "timestamp"
            },
            "stakeholders": "string[]"
          }
        },
        {
          "type": "Event",
          "properties": {
            "node_id": "UUID",
            "node_type": "event",
            "space_id": "UUID",
            "event_type": "enum[standup,reminder,summary_generated,task_created,decision_made]",
            "payload": "json",
            "occurred_at": "timestamp",
            "triggered_by": "UUID (agent or system)"
          }
        },
        {
          "type": "Summary",
          "properties": {
            "node_id": "UUID",
            "node_type": "summary",
            "space_id": "UUID (thread or channel)",
            "summary_type": "enum[thread,channel,daily,weekly]",
            "content": {
              "summary_text": "string",
              "key_points": "string[]",
              "action_items": "string[]",
              "decisions": "string[]",
              "open_questions": "string[]"
            },
            "generated_at": "timestamp",
            "posted_to_slack": "boolean"
          }
        }
      ]
    },
    "contexts": {
      "description": "Relationships and metadata connecting spaces and nodes",
      "types": [
        {
          "type": "Connection",
          "purpose": "Define relationships between nodes",
          "properties": {
            "context_id": "UUID",
            "context_type": "connection",
            "from_node_id": "UUID",
            "to_node_id": "UUID",
            "connection_type": "enum",
            "properties": "json",
            "weight": "float",
            "created_at": "timestamp"
          },
          "connection_types": [
            "created_by",
            "assigned_to",
            "mentions",
            "responds_to",
            "references",
            "contains",
            "participates_in",
            "depends_on",
            "implements",
            "relates_to"
          ]
        },
        {
          "type": "Annotation",
          "purpose": "Add metadata and tags to nodes",
          "properties": {
            "context_id": "UUID",
            "context_type": "annotation",
            "target_node_id": "UUID",
            "annotation_type": "enum[tag,label,flag,sentiment]",
            "key": "string",
            "value": "json",
            "created_by": "UUID (agent)",
            "created_at": "timestamp"
          }
        },
        {
          "type": "State",
          "purpose": "Track state changes over time",
          "properties": {
            "context_id": "UUID",
            "context_type": "state",
            "target_node_id": "UUID",
            "state_type": "string",
            "previous_value": "json",
            "current_value": "json",
            "changed_at": "timestamp",
            "changed_by": "UUID (agent)"
          }
        },
        {
          "type": "History",
          "purpose": "Maintain temporal event sequences",
          "properties": {
            "context_id": "UUID",
            "context_type": "history",
            "space_id": "UUID",
            "event_sequence": "UUID[]",
            "window_start": "timestamp",
            "window_end": "timestamp",
            "summary": "json"
          }
        }
      ]
    }
  }
}